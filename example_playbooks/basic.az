server "hello_world_server" {
  addresses = [
    "10.0.0.1"
  ]
}

variable "output_file" {
  default = "azad.txt"
}

host "hello_world_server" {
  roles = [
    "hello world"
  ]
}

role "hello world" {
  task "bash" "save hello world" {
    command = "echo 'hello world' >> ./${ var.output_file }"
  }
}
